<% if flash[:alert] %>
	$('.alert-danger').append('<br/> <%= flash[:alert] %>');
	<% flash[:alert] = '' %>
<% end %>
<% if flash[:notice] %>
	$('.alert-success').append('<br/> <%= flash[:notice] %>');
	<% flash[:notice] = '' %>
<% end %>

<% if @attachment.attachmentable_type == 'Question' %>
	$('li#attach-question-<%= @attachment.id %>').remove();
<% else %>
	$('li#attach-answer-<%= @attachment.id %>').remove();
<% end %>
