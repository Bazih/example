<% if flash[:alert] %>
	$('.alert').append('<br/> <%= flash[:alert] %>');
	<% flash[:alert] = '' %>
<% end %>
<% if flash[:notice] %>
	$('.notice').append('<br/> <%= flash[:notice] %>');
	<% flash[:notice] = '' %>
<% end %>

<% if @attachment.attachmentable_type == 'Question' %>
	$('li.attach-id-<%= @attachment.id %>').remove();
<% else %>
	$('li.attach-id-answer-<%= @attachment.id %>').remove();
<% end %>
