doctype html
html
  head
    title Example
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  body
    .row
      .col-lg-12.text-right
        = link_to 'Sign up', new_user_registration_path, class: 'btn btn-sm btn-success'
        = link_to 'Sign in', new_user_session_path, class: 'btn btn-sm btn-success'
        = link_to 'Signed out', destroy_user_session_path, method: :delete, class: 'btn btn-sm btn-warning'
    p.notice= notice
    p.alert= alert
    = yield
  /footer.panel-footer